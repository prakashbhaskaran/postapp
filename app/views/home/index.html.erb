<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>

<div class="text-end"><button class="btn btn-primary mb-5 mt-3" data-bs-toggle="modal" data-bs-target="#exampleModal">Create post</button></div>

  <%= render partial: 'posts/post', collection: @posts, as: :post %>



<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Write your post</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
      <%= turbo_frame_tag :post_form do %>
        <%= render partial: 'posts/form', locals:{ post: @post} %>
      <% end %>
      </div>
    </div>
  </div>
</div>